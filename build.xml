<?xml version="1.0"?>

<project name="jgnash-osx" default="macbundle" basedir=".">

<property environment="env" />

<taskdef name="bundleapp" classname="com.oracle.appbundler.AppBundlerTask"/>

<target name="macbundle" description="build a mac bundle">
  <bundleapp outputdirectory="jgnash-swing/target"
        name="jGnash"
        displayname="jGnash"
        identifier="com.github.jgnash"
        shortversion="2.12.0"
        applicationCategory="public.app-category.finance"
        mainclassname="jgnash.Main">
        <runtime dir="${env.JAVA_HOME}" />
        <classpath dir="jgnash-swing/target">
            <include name="jgnash2.jar"/>
            <include name="lib/*.jar"/>
        </classpath>
        <option value="-Dapple.laf.useScreenMenuBar=true"/>
    </bundleapp>
</target>

</project>
